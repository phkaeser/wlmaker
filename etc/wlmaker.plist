// Base configuration for wlmaker: Keyboard and autostarted applications.
{
  Keyboard = {
    XkbRMLVO = {
      Rules = "evdev";
      Model = "pc105";
      Layout = "ch";
      Variant = "de_nodeadkeys";
      Options = ""
    };
    Repeat = {
      // Delay before initiating repeats, in milliseconds.
      Delay = 300;
      // Repeats per second.
      Rate = 25
    }
  };
  KeyBindings = {
    TaskListNext = "Ctrl+Alt+Logo+Escape";
    TaskListPrevious = "Shift+Ctrl+Alt+Logo+Escape";
  };
  ScreenLock = {
    IdleSeconds = 300;
    Command = "/usr/bin/swaylock"
  };
  // Optional array: Commands to start once wlmaker is running.
  Autostart = (
    "/usr/bin/foot"
  )
}